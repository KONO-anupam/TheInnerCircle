<%- include('partials/header', { title: 'Become a Member' }) %>

<div class="flex justify-center px-4 py-12">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded-lg p-6 text-center">
      <i class="fas fa-star fa-3x text-yellow-400 mb-4"></i>
      <h2 class="text-2xl font-bold mb-2">Become a Member</h2>
      <p class="text-gray-500 mb-6">
        Enter the secret code to unlock full access to The Inner Circle.
      </p>

      <form action="/become-member" method="post" class="space-y-4">
        <div class="relative">
          <input
            type="password"
            id="secret_code"
            name="secret_code"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <label
            for="secret_code"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
          >
            Secret Code
          </label>
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold py-3 rounded-md transition"
        >
          Unlock Membership
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
