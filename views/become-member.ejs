<%- include('partials/header', { title: 'Become a Member - Members Only' }) %>

<div class="flex justify-center px-4 mt-10">
  <div class="w-full max-w-2xl">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-6">
        <i class="fas fa-star text-4xl text-yellow-500 mb-4"></i>
        <h2 class="text-3xl font-bold text-gray-800">Become a Member</h2>
        <p class="text-gray-500 mt-2">
          Enter the secret passcode to unlock member privileges
        </p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md flex items-center gap-2 mb-4" role="alert">
          <i class="fas fa-exclamation-triangle text-red-500"></i>
          <span><%= error %></span>
        </div>
      <% } %>

      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md flex items-center gap-2 mb-4" role="alert">
          <i class="fas fa-check-circle text-green-500"></i>
          <span><%= success %></span>
        </div>
      <% } %>

        <form action="/become-member" method="post">
        <div class="mb-6">
          <label for="passcode" class="block text-gray-700 font-medium mb-2">Secret Passcode</label>
          <div class="flex items-center border border-gray-300 rounded-md overflow-hidden focus-within:ring-2 focus-within:ring-yellow-400">
            <span class="px-3 text-gray-500">
              <i class="fas fa-key"></i>
            </span>
            <input
              name="passcode"
              id="passcode"
              type="password"
              placeholder="Enter the secret passcode"
              value="<%= typeof formData !== 'undefined' && formData.passcode ? formData.passcode : '' %>"
              required
              class="w-full py-3 px-3 focus:outline-none"
            />
          </div>
          <p class="text-sm text-gray-500 mt-2">
            Contact an existing member to get the secret passcode.
          </p>
        </div>

        <div class="mb-6">
          <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-medium text-lg py-3 rounded-md flex justify-center items-center gap-2 transition">
            <i class="fas fa-star"></i> Become a Member
          </button>
        </div>

        <div class="text-center">
          <a href="/" class="text-blue-500 hover:underline flex items-center justify-center gap-1">
            <i class="fas fa-arrow-left"></i> Back to Home
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Member Benefits Section -->
<div class="mt-10 px-4">
  <div class="bg-gray-100 rounded-lg shadow-sm p-6">
    <h5 class="text-xl font-semibold text-gray-800 mb-6 flex items-center gap-2">
      <i class="fas fa-info-circle text-blue-500"></i> Member Benefits
    </h5>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <i class="fas fa-eye text-3xl text-blue-500 mb-3"></i>
        <h6 class="text-lg font-medium text-gray-800">Access Secret Posts</h6>
        <p class="text-sm text-gray-500">View exclusive member-only content</p>
      </div>
      <div class="text-center">
        <i class="fas fa-comments text-3xl text-blue-500 mb-3"></i>
        <h6 class="text-lg font-medium text-gray-800">Join Discussions</h6>
        <p class="text-sm text-gray-500">Participate in member conversations</p>
      </div>
      <div class="text-center">
        <i class="fas fa-crown text-3xl text-yellow-500 mb-3"></i>
        <h6 class="text-lg font-medium text-gray-800">Exclusive Access</h6>
        <p class="text-sm text-gray-500">Special privileges and features</p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
