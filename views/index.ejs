<%- include('partials/header', { title: 'Welcome to The Inner Circle' }) %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto text-center flex flex-col items-center justify-center">
    <div class="py-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-900 mb-4">
        Welcome to
        <span class="text-indigo-600">The Inner Circle</span>
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        A private and secure place for members to share their thoughts and
        connect with like-minded individuals.
      </p>

      <% if (typeof user === 'undefined' || !user) { %>
      <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/register"
          class="inline-flex items-center justify-center px-6 py-3 text-white bg-indigo-600 hover:bg-indigo-700 text-lg font-medium rounded-lg shadow"
        >
          Get Started
        </a>
        <a
          href="/login"
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-400 text-gray-700 hover:bg-gray-100 text-lg font-medium rounded-lg"
        >
          Login
        </a>
      </div>
      <% } else { %>
      <div class="mt-6">
        <a
          href="/dashboard"
          class="inline-flex items-center justify-center px-6 py-3 text-white bg-indigo-600 hover:bg-indigo-700 text-lg font-medium rounded-lg shadow"
        >
          Go to Dashboard
        </a>
      </div>
      <% } %>
    </div>

    <hr class="w-full border-gray-300 my-10" />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center">
        <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center text-white text-xl" style="background-color: var(--secondary-color)">
          <i class="fas fa-lock"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">Exclusive Content</h3>
        <p class="text-sm text-gray-600">
          Only members can see the content shared by others. Your privacy is our priority.
        </p>
      </div>

      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center">
        <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center text-white text-xl" style="background-color: var(--secondary-color)">
          <i class="fas fa-star"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">Become a Member</h3>
        <p class="text-sm text-gray-600">
          Unlock full access by becoming a member and start sharing your own messages.
        </p>
      </div>

      <div class="bg-white shadow rounded-lg p-6 flex flex-col items-center">
        <div class="w-12 h-12 mb-4 rounded-full flex items-center justify-center text-white text-xl" style="background-color: var(--secondary-color)">
          <i class="fas fa-shield-alt"></i>
        </div>
        <h3 class="text-lg font-bold text-gray-800 mb-2">Admin Moderation</h3>
        <p class="text-sm text-gray-600">
          Admins have the ability to manage content, ensuring a safe and respectful community.
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
