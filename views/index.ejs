<%- include('partials/header', { title: 'Welcome to The Inner Circle' }) %>

<div class="px-4 py-12 max-w-7xl mx-auto">
  <!-- Hero Section -->
  <div class="flex flex-col-reverse lg:flex-row items-center gap-12">
    <div class="w-full lg:w-1/2">
      <h1 class="text-4xl sm:text-5xl font-bold leading-tight mb-4">
        Welcome to
        <span class="text-indigo-600">The Inner Circle</span>
      </h1>
      <p class="text-gray-600 text-lg mb-6">
        A private and secure place for members to share their thoughts and
        connect with like-minded individuals.
      </p>

      <% if (typeof user === 'undefined' || !user) { %>
      <div class="flex flex-col sm:flex-row gap-4">
        <a
          href="/register"
          class="bg-blue-600 text-white px-6 py-3 text-lg font-semibold rounded-md hover:bg-blue-700 transition"
        >
          Get Started
        </a>
        <a
          href="/login"
          class="border border-gray-400 text-gray-700 px-6 py-3 text-lg font-semibold rounded-md hover:bg-gray-100 transition"
        >
          Login
        </a>
      </div>
      <% } else { %>
      <a
        href="/dashboard"
        class="bg-blue-600 text-white px-6 py-3 text-lg font-semibold rounded-md hover:bg-blue-700 transition"
      >
        Go to Dashboard
      </a>
      <% } %>
    </div>

    <!-- Icon -->
    <div class="w-full lg:w-1/2 flex justify-center">
      <i class="fas fa-users text-[10rem] text-blue-300 opacity-10"></i>
    </div>
  </div>

  <!-- Divider -->
  <hr class="my-12 border-gray-300" />

  <!-- Features Section -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
    <!-- Feature 1 -->
    <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col items-center">
      <div
        class="text-white bg-indigo-600 w-12 h-12 rounded-full flex items-center justify-center text-2xl mb-4"
      >
        <i class="fas fa-lock"></i>
      </div>
      <h3 class="text-xl font-bold mb-2">Exclusive Content</h3>
      <p class="text-gray-600">
        Only members can see the content shared by others. Your privacy is our priority.
      </p>
    </div>

    <!-- Feature 2 -->
    <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col items-center">
      <div
        class="text-white bg-indigo-600 w-12 h-12 rounded-full flex items-center justify-center text-2xl mb-4"
      >
        <i class="fas fa-star"></i>
      </div>
      <h3 class="text-xl font-bold mb-2">Become a Member</h3>
      <p class="text-gray-600">
        Unlock full access by becoming a member and start sharing your own messages.
      </p>
    </div>

    <!-- Feature 3 -->
    <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col items-center">
      <div
        class="text-white bg-indigo-600 w-12 h-12 rounded-full flex items-center justify-center text-2xl mb-4"
      >
        <i class="fas fa-shield-alt"></i>
      </div>
      <h3 class="text-xl font-bold mb-2">Admin Moderation</h3>
      <p class="text-gray-600">
        Admins have the ability to manage content, ensuring a safe and respectful community.
      </p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
