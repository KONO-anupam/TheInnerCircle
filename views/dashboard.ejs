<%- include('partials/header', { title: 'Dashboard' }) %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 pb-4 border-b border-gray-200">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Community Feed</h1>
        <p class="text-sm text-gray-500">Latest posts from our members.</p>
      </div>
      <% if (user.is_member) { %>
      <a href="/create-message" class="mt-4 sm:mt-0 inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg shadow hover:bg-indigo-700 transition">
        <i class="fas fa-plus-circle"></i> New Post
      </a>
      <% } else { %>
      <a href="/become-member" class="mt-4 sm:mt-0 inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg shadow hover:bg-indigo-700 transition">
        <i class="fas fa-star"></i> Become a Member
      </a>
      <% } %>
    </div>

    <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
    <% messages.forEach(message => { %>
    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-200 transform hover:-translate-y-1 mb-6 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= message.title %></h3>
      <p class="text-gray-700 mb-4"><%= message.text %></p>
      <div class="text-sm text-gray-500 border-t pt-3">
        <% if (user.is_member) { %>
        <p>By <%= message.user.first_name %> <%= message.user.last_name %></p>
        <p><%= new Date(message.timestamp).toLocaleString() %></p>
        <% } else { %>
        <p>By Anonymous</p>
        <% } %>
      </div>
      <% if (user && user.is_admin) { %>
      <form action="/delete-message/<%= message._id %>" method="post" class="mt-3">
        <button type="submit" class="inline-flex items-center gap-2 text-sm text-red-600 border border-red-600 rounded px-3 py-1 hover:bg-red-50 transition">
          <i class="fas fa-trash-alt"></i> Delete
        </button>
      </form>
      <% } %>
    </div>
    <% }) %>
    <% } else { %>
    <div class="flex flex-col items-center justify-center min-h-[300px] border-2 border-dashed border-gray-300 rounded-xl bg-gray-100 p-8 text-center">
      <i class="fas fa-comments text-5xl text-gray-300 mb-4"></i>
      <h4 class="text-lg font-semibold text-gray-500">No Messages Yet</h4>
      <p class="text-sm text-gray-400">Be the first to post and start a conversation!</p>
      <% if (user.is_member) { %>
      <a href="/create-message" class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg shadow hover:bg-indigo-700 transition">
        Create a Post
      </a>
      <% } %>
    </div>
    <% } %>

  </div>
</div>

<%- include('partials/footer') %>
