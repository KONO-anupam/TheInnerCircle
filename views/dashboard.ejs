<%- include('partials/header', { title: 'Dashboard' }) %>

<div class="flex-grow bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <div class="mb-4 lg:mb-0">
          <h1 class="text-3xl font-bold text-gray-900 flex items-center space-x-3">
            <i class="fas fa-comments text-pink-500"></i>
            <span>Community Feed</span>
          </h1>
          <p class="text-gray-600 mt-2">Latest posts from our members</p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-3">
          <% if (user.is_member) { %>
            <a href="/create-message" class="group bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 flex items-center space-x-2">
              <i class="fas fa-plus-circle group-hover:animate-spin"></i>
              <span>New Post</span>
            </a>
          <% } else { %>
            <a href="/become-member" class="group bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 flex items-center space-x-2">
              <i class="fas fa-star group-hover:animate-pulse"></i>
              <span>Become a Member</span>
            </a>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Messages Section -->
    <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
      <div class="space-y-6">
        <% messages.forEach((message, index) => { %>
        <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden border border-gray-100">
          <div class="p-6">
            <!-- Message Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-pink-600 transition-colors">
                  <%= message.title %>
                </h3>
                <div class="flex items-center space-x-4 text-sm text-gray-500">
                  <% if (user.is_member) { %>
                    <div class="flex items-center space-x-2">
                      <div class="w-8 h-8 bg-gradient-to-br from-pink-400 to-pink-600 rounded-full flex items-center justify-center text-white text-xs font-bold">
                        <%= message.user.first_name.charAt(0) %><%= message.user.last_name.charAt(0) %>
                      </div>
                      <span class="font-medium">
                        <%= message.user.first_name %> <%= message.user.last_name %>
                      </span>
                    </div>
                    <div class="flex items-center space-x-1">
                      <i class="fas fa-clock text-gray-400"></i>
                      <span><%= new Date(message.timestamp).toLocaleString() %></span>
                    </div>
                  <% } else { %>
                    <div class="flex items-center space-x-2">
                      <div class="w-8 h-8 bg-gray-400 rounded-full flex items-center justify-center text-white text-xs">
                        <i class="fas fa-user-secret"></i>
                      </div>
                      <span class="font-medium text-gray-600">Anonymous</span>
                    </div>
                  <% } %>
                </div>
              </div>
              
              <!-- Admin Actions -->
              <% if (user && user.is_admin) { %>
                <div class="ml-4">
                  <form action="/delete-message/<%= message.id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this message?')">
                    <button type="submit" class="group p-2 text-red-500 hover:text-red-700 hover:bg-red-50 rounded-lg transition-all duration-200">
                      <i class="fas fa-trash-alt group-hover:animate-bounce"></i>
                    </button>
                  </form>
                </div>
              <% } %>
            </div>

            <!-- Message Content -->
            <div class="prose prose-lg max-w-none">
              <p class="text-gray-700 leading-relaxed whitespace-pre-wrap"><%= message.text %></p>
            </div>

            <!-- Message Footer -->
            <div class="mt-6 pt-4 border-t border-gray-100 flex items-center justify-between">
              <div class="flex items-center space-x-4 text-sm text-gray-500">
                <div class="flex items-center space-x-1">
                  <i class="fas fa-eye"></i>
                  <span>View #<%= index + 1 %></span>
                </div>
              </div>
              
              <div class="flex items-center space-x-2">
                <div class="px-3 py-1 bg-pink-100 text-pink-700 text-xs font-medium rounded-full">
                  <i class="fas fa-heart mr-1"></i>
                  Community Post
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Load More Section (if needed) -->
      <div class="mt-12 text-center">
        <div class="inline-flex items-center space-x-2 text-gray-500">
          <div class="w-2 h-2 bg-pink-400 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium">You've reached the end</span>
          <div class="w-2 h-2 bg-pink-400 rounded-full animate-pulse"></div>
        </div>
      </div>

    <% } else { %>
      <!-- Empty State -->
      <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
        <div class="max-w-md mx-auto">
          <div class="w-24 h-24 bg-gradient-to-br from-gray-200 to-gray-300 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-comments text-4xl text-gray-400"></i>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 mb-3">No Messages Yet</h3>
          <p class="text-gray-600 mb-8 leading-relaxed">
            Be the first to share your thoughts and start meaningful conversations in our community!
          </p>
          
          <% if (user.is_member) { %>
            <a href="/create-message" class="group bg-gradient-to-r from-pink-500 to-pink-600 hover:from-pink-600 hover:to-pink-700 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 inline-flex items-center space-x-2">
              <i class="fas fa-pen-fancy group-hover:animate-bounce"></i>
              <span>Create Your First Post</span>
            </a>
          <% } else { %>
            <div class="space-y-4">
              <p class="text-sm text-gray-500 bg-gray-50 rounded-lg p-4">
                <i class="fas fa-lock mr-2"></i>
                Become a member to start posting and see all community content
              </p>
              <a href="/become-member" class="group bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 inline-flex items-center space-x-2">
                <i class="fas fa-star group-hover:animate-pulse"></i>
                <span>Become a Member</span>
              </a>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- Community Stats -->
    <div class="mt-12 bg-gradient-to-r from-pink-500 to-pink-600 rounded-2xl shadow-lg p-8 text-white">
      <div class="text-center mb-6">
        <h3 class="text-2xl font-bold mb-2">Community Activity</h3>
        <p class="opacity-90">Growing stronger every day</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="group">
          <div class="text-3xl font-bold mb-2 group-hover:scale-110 transition-transform">
            <%= typeof messages !== 'undefined' ? messages.length : 0 %>
          </div>
          <div class="text-pink-100 font-medium">Total Posts</div>
        </div>
        <div class="group">
          <div class="text-3xl font-bold mb-2 group-hover:scale-110 transition-transform">24/7</div>
          <div class="text-pink-100 font-medium">Community Support</div>
        </div>
        <div class="group">
          <div class="text-3xl font-bold mb-2 group-hover:scale-110 transition-transform">100%</div>
          <div class="text-pink-100 font-medium">Privacy Protected</div>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>