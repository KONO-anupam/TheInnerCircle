<%- include('partials/header', { title: 'Create Message' }) %>

<div class="flex justify-center px-4 py-12">
  <div class="w-full max-w-2xl">
    <div class="bg-white shadow-md rounded-lg p-6 md:p-10">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold mb-1">Create a New Post</h2>
        <p class="text-gray-500">Share your thoughts with the community.</p>
      </div>

      <form action="/create-message" method="post" class="space-y-6">
        <!-- Title Field -->
        <div class="relative">
          <input
            type="text"
            id="title"
            name="title"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <label
            for="title"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
          >
            Title
          </label>
        </div>

        <!-- Textarea Field -->
        <div class="relative">
          <textarea
            id="text"
            name="text"
            required
            placeholder=" "
            rows="6"
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-y min-h-[150px]"
          ></textarea>
          <label
            for="text"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
          >
            Message
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold py-3 rounded-md transition"
        >
          Submit Post
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
