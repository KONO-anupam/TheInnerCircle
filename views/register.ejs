<%- include('partials/header', { title: 'Register' }) %>

<div class="flex justify-center px-4 py-12">
  <div class="w-full max-w-2xl">
    <div class="bg-white shadow-md rounded-lg p-6 md:p-10">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold mb-2">Create an Account</h2>
        <p class="text-gray-500">Join The Inner Circle today.</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
      <div class="flex items-center bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded mb-6">
        <i class="fas fa-exclamation-triangle mr-2"></i>
        <span><%= error %></span>
      </div>
      <% } %>

      <form action="/register" method="post" class="space-y-6">
        <!-- Name Fields -->
        <div class="grid md:grid-cols-2 gap-4">
          <div class="relative">
            <input
              type="text"
              id="first_name"
              name="first_name"
              value="<%= typeof formData !== 'undefined' && formData.firstName ? formData.firstName : '' %>"
              required
              placeholder=" "
              class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            />
            <label for="first_name"
              class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
              >First Name</label>
          </div>
          <div class="relative">
            <input
              type="text"
              id="last_name"
              name="last_name"
              value="<%= typeof formData !== 'undefined' && formData.lastName ? formData.lastName : '' %>"
              required
              placeholder=" "
              class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            />
            <label for="last_name"
              class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
              >Last Name</label>
          </div>
        </div>

        <!-- Username -->
        <div class="relative">
          <input
            type="text"
            id="username"
            name="username"
            value="<%= typeof formData !== 'undefined' && formData.username ? formData.username : '' %>"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <label for="username"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
            >Username</label>
        </div>

        <!-- Email -->
        <div class="relative">
          <input
            type="email"
            id="email"
            name="email"
            value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <label for="email"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
            >Email address</label>
        </div>

        <!-- Password -->
        <div class="relative">
          <input
            type="password"
            id="password"
            name="password"
            minlength="6"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <label for="password"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
            >Password</label>
        </div>

        <!-- Confirm Password -->
        <div class="relative">
          <input
            type="password"
            id="confirm_password"
            name="confirm_password"
            minlength="6"
            required
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <label for="confirm_password"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
            >Confirm Password</label>
        </div>

        <!-- Admin Code -->
        <div class="relative">
          <input
            type="password"
            id="admin_code"
            name="admin_code"
            placeholder=" "
            class="peer w-full border border-gray-300 rounded-md px-4 pt-4 pb-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
          />
          <label for="admin_code"
            class="absolute left-4 top-2 text-sm text-gray-500 transition-all peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-500"
            >Admin Code (Optional)</label>
          <p class="text-sm text-gray-400 mt-1">
            If you have an admin code, enter it here to register as an administrator.
          </p>
        </div>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold py-3 rounded-md transition"
          >
            <i class="fas fa-user-plus mr-2"></i>Register
          </button>
        </div>
      </form>

      <div class="text-center mt-6">
        <p class="text-gray-500">
          Already have an account?
          <a href="/login" class="text-blue-600 hover:underline">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
